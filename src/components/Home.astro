import ArrowLongRight from "@/components/icons/ArrowLongRight.astro";
---

<section class="p-4 lg:p-10 flex flex-col justify-center lg:block min-h-svh">
  <h2 class="font-semibold text-3xl lg:text-7xl text-secondary">
    Luca Di&nbsp;Marco <span class="font-light text-muted/30 italic">/tsu/</span
    >
  </h2>
  <div class="max-w-[600px">
    <p
      class="text-lg lg:text-2xl text-muted my-5 [&>strong]:italic [&>strong]:font-[arial]">
