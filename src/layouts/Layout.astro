---
import "@fontsource/miriam-libre";
---

<!doctype html>
<html lang="en" class="text-primary bg-background cursor-none">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <!-- <link rel="icon" type="image/svg+xml" href="/favicon.svg" /> -->
    <meta name="generator" content={Astro.generator} />
    <title></title>
  </head>
  <body>
    <slot />
    <div id="cursor-border" class="w-12 h-12 hidden lg:block"></div>
    <div id="cursor-dot" class="w-2 h-2 hidden lg:block"></div>
  </body>
</html>

<style is:global>
  #cursor-dot,
  #cursor-border {
    @apply bg-background mix-blend-difference fixed rounded-full pointer-events-none z-50;
    transform: translate(-50%, -50%);
  }
</style>

<script>
  const cursorBorder = document.getElementById("cursor-border");
  const cursorDot = document.getElementById("cursor-dot");

  document.addEventListener("mousemove", (event) => {
    if (cursorBorder && cursorDot) {
      cursorDot.style.left = `${event.clientX}px`;
      cursorDot.style.top = `${event.clientY}px`;

      cursorBorder.animate(
        {
          left: `${event.clientX}px`,
          top: `${event.clientY}px`,
        },
        {
          duration: 300,
          fill: "both",
        }
      );
    }
  });
</script>
